using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
                        int pictures = 52;
            int picturesInRow = 3;
            int rowPictures = pictures / picturesInRow;
            int picturesWithoutRow = pictures % picturesInRow;
            Console.WriteLine("Рядов картинок целых: " + rowPictures);
            Console.WriteLine("Картинок без рядов осталось: " + picturesWithoutRow);
         }
    }
}
