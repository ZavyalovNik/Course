using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {

            string[] surname = new string[0];
            string[] post = new string[0];
            bool exit = false;
            Console.WriteLine("Введите одну из команд");

            while (exit != true)
            {
                Console.Clear();
                Console.WriteLine("1" + " Добавить досье");
                Console.WriteLine("2" + " Вывести досье");
                Console.WriteLine("3" + " Удалить досье");
                Console.WriteLine("4" + " Поиск по фамилии");
                Console.WriteLine("5" + " Выход");

                switch (Console.ReadLine())
                {
                    case "1":
                        AddDosier(ref surname, ref post);
                        break;
                    case "2":
                        ShowRecords(surname, post);
                        break;
                    case "3":
                        break;
                    case "4":
                        break;
                    case "5":
                        exit = true;
                        break;
                }

            }
        }
        static void AddDosier(ref string[] arrayOfSurname, ref string[] arrayOfPost)
        {
            Console.WriteLine("Введите фамилию");
            AddLineInArray(ref arrayOfSurname, Console.ReadLine());

            Console.WriteLine("Введите должность");
            AddLineInArray(ref arrayOfPost, Console.ReadLine());
        }
        static void AddLineInArray(ref string[] array, string line) // запрашивает 2 значения, получает ссылку на массив из самого начала string[] surname = new string[0]; у этого  массива нет никаких значений, только облась памяти. второе значение то что вводит полльзователь 50 строка
        {
            string[] tempArray = new string[array.Length + 1]; //берем длинну массива (сейчас она 0?) и добавляем 1, получаем временный массив в котором может быть ОДНО значение, или 2? ведь массивы считаются с 0 значения
            for (int i = 0; i < array.Length; i++) // бежим по циклу
            {
                tempArray[i] = array[i]; // присваиваем значения из одного цикла другому
            }
            tempArray[tempArray.Length - 1] = line;//  длинна массива сейчас 1, мы вычитаем 1 и получаем 0 значение. приравниваем ввод нулевому значению массива.
            array = tempArray; //приравниваем массивы
        }

        static void ShowRecords(string[] names, string[] posts)
        {
            Console.WriteLine("\nВсе записи:");
            for (int i = 0; i < names.GetLength(0); i++)
            {
                Console.WriteLine($"{i}. {names[i]} - {posts[i]}");
            }
            Console.Write("\nДля продолжения нажмите любую клавишу");
            Console.ReadKey();
        }
    }
}
