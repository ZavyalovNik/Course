using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {

             string[] surname = new string[0];
             string[] post = new string[0];
             bool exit = false;
             Console.WriteLine("Введите одну из команд");

             while (exit != true)
             {
                 Console.Clear();
                 Console.WriteLine("1" + " Добавить досье");
                 Console.WriteLine("2" + " Вывести досье");
                 Console.WriteLine("3" + " Удалить досье");
                 Console.WriteLine("4" + " Поиск по фамилии");
                 Console.WriteLine("5" + " Выход");

                 switch(Console.ReadLine())
                 {
                     case "1":
                        AddDosier(ref surname, ref post);
                        Console.WriteLine( surname);
                        Console.WriteLine(post);
                        Console.ReadKey();
                        break;
                     case "2":
                         break;
                     case "3":
                         break;
                     case "4":
                         break;
                     case "5":
                        exit = true;
                         break;
                 }

             }
         }
         static void AddDosier(ref string[] surname, ref string[] post)
         {
             Console.WriteLine("Введите фамилию");
            AddLine( surname, Console.ReadLine());

            Console.WriteLine("Введите должность");
            AddLine( post, Console.ReadLine());

            
         }


        static void AddLine(string[] array, string line)
        {
            string[] tempArray = new string[array.GetLength(0) + 1];
            for(int i = 0; i < array.GetLength(0); i++)
            {
                tempArray[i] = array[i];
            }
            tempArray[array.GetLength(0)] = line;
            array = tempArray;
        }




        
        
     }
}
