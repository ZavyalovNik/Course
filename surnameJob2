using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] surname = new string[0];
            string[] post = new string[0];
            bool exit = false;
            Console.WriteLine("Введите одну из команд");

            while (exit != true)
            {
                Console.Clear();
                Console.WriteLine("1" + " Добавить досье");
                Console.WriteLine("2" + " Вывести досье");
                Console.WriteLine("3" + " Удалить досье");
                Console.WriteLine("4" + " Поиск по фамилии");
                Console.WriteLine("5" + " Выход");

                switch (Console.ReadLine())
                {
                    case "1":
                        AddDosier(ref surname, ref post);
                        break;
                    case "2":
                        ShowRecords(surname, post);
                        break;
                    case "3":
                        break;
                    case "4":
                        FindName(ref surname, ref post);
                        break;
                    case "5":
                        exit = true;
                        break;
                }

            }
        }

        static void AddDosier(ref string[] arrayOfSurname, ref string[] arrayOfPost)
        {
            Console.WriteLine("Введите фамилию");
            AddLineInArray(ref arrayOfSurname, Console.ReadLine());

            Console.WriteLine("Введите должность");
            AddLineInArray(ref arrayOfPost, Console.ReadLine());
        }

        static void AddLineInArray(ref string[] array, string line)
        {
            string[] tempArray = new string[array.Length + 1];

            for (int i = 0; i < array.Length; i++)
            {
                tempArray[i] = array[i];
            }
            tempArray[tempArray.Length - 1] = line;
            array = tempArray;
        }

        static void ShowRecords(string[] names, string[] posts)
        {
            Console.WriteLine("\nВсе записи:");

            for (int i = 0; i < names.GetLength(0); i++)
            {
                Console.WriteLine($"{i + 1}. {names[i]} - {posts[i]}");
            }
            Console.Write("\nДля продолжения нажмите любую клавишу");
            Console.ReadKey();
        }

        static void FindName(ref string[] massiveSurname, ref string[] massivePost)
        {
            Console.WriteLine("Введите фамилию для поиска");
            string searchName = Console.ReadLine();
           
            for(int i = 0; i < massiveSurname.Length; i++)
            {
                if(massiveSurname[i] == searchName)
                {
                    Console.WriteLine("Найдено: " + i + " " + massiveSurname[i] + " - " + massivePost[i]);
                    Console.Write("\n Для продолжения нажмите любую клавишу");
                    Console.ReadKey();
                }
                else
                {
                    break;
                }
            }
            Console.Write("\nЗаписи с такой фамилией не найдено. Для продолжения нажмите любую клавишу");
            Console.ReadKey();
        }
    }
}
