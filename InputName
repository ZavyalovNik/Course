using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Напишите ваше имя");
            string userInput = Console.ReadLine();
            Console.WriteLine("Введите символ в котором написать ваше имя");
            string x = Console.ReadLine();
            Console.WriteLine(userInput.Length);
            int i = userInput.Length;
            while (userInput.Length >= i && i > 0)
            {
                i--;
                Console.WriteLine(x);
                Console.WriteLine(x + userInput + x );
                Console.WriteLine(x);
            }
        }
    }
}
