using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string exit = "Esc";
            string userInput = "1";
            while (userInput != exit)
            {
                
                Console.WriteLine("Привет, это меню в котором можно ввести некоторые команды");
                Console.WriteLine("SetName");
                Console.WriteLine("ChangeConsoleColor");
                Console.WriteLine("SetPassword");
                Console.WriteLine("WriteName");
                Console.WriteLine("Mix");
                Console.WriteLine("TurnOffMusicMenu");
                Console.WriteLine("ToTheEndMenu"); 
                Console.WriteLine("info");
                Console.WriteLine("Esc");
                userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "SetName":
                        Console.WriteLine("Введите имя");
                        string YouName = Console.ReadLine();
                        break;
                    case "ChangeConsoleColor":
                        Console.WriteLine("Color");
                        break;
                    case "SetPassword":
                        Console.WriteLine("установи пароль");
                        string password = Console.ReadLine();
                        break;
                    case "WriteName":
                        Console.WriteLine("Напишите имя");
                        string name = Console.ReadLine();
                        break;
                    case "Mix":
                        Console.WriteLine("Кручу верчу запутать хочу. Перемешали строки меню");
                        break;
                    case "TurnOffMusicMenu":
                        Console.WriteLine("Музыка в меню выключена");
                        break;
                    case "Info":
                        Console.WriteLine("Туть информация");
                        break;
                    case "Esc":
                        Console.WriteLine("Выход");
                        break;
                }
                Console.WriteLine("такое меню)");
                Console.ReadKey();
            }
        }
    }
}
