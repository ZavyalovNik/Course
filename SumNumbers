using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] userNumber = new int[0];
            string userInput = "what?";
            int sum = 0;
            Console.WriteLine("Ведите число");
            Console.WriteLine("Чтобы вывести сумму введеных чисел введите Sum");
            Console.WriteLine("Чтобы выйти введите Esc");

            while (userInput != "esc")
            {
                userInput = Console.ReadLine().ToLower();

                if (userInput == "sum")
                {
                    for (int i = 0; i < userNumber.Length; i++)
                    {
                        sum += userNumber[i];
                    }
                    Console.WriteLine(sum);
                }

                else if (userInput == "esc")
                {
                    Console.WriteLine("Вы вышли из программы");
                    break;
                }

                else
                {
                    int[] tempUserNumber = new int[userNumber.Length + 1];

                    for (int i = 0; i < userNumber.Length; i++)
                    {
                        tempUserNumber[i] = userNumber[i];
                    }
                    tempUserNumber[tempUserNumber.Length - 1] = int.Parse(userInput);
                    userNumber = tempUserNumber;
                }
            }
        }
    }
}
