using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace consoleNew
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] userNumbers = new int[0];
            string userInput = null;
            int sum = 0;
            Console.WriteLine("Ведите число");
            Console.WriteLine("Чтобы вывести сумму введеных чисел введите Sum");
            Console.WriteLine("Чтобы выйти введите Esc");

            while (userInput != "esc")
            {
                userInput = Console.ReadLine().ToLower();

                if (userInput == "sum")
                {
                    for (int i = 0; i < userNumbers.Length; i++)
                    {
                        sum += userNumbers[i];

                    }
                    Console.WriteLine(sum);
                }

                else if (userInput == "esc")
                {
                    Console.WriteLine("Вы вышли из программы");
                }

                else
                {
                    int[] tempUserNumbers = new int[userNumbers.Length + 1];

                    for (int i = 0; i < userNumbers.Length; i++)
                    {
                        tempUserNumbers[i] = userNumbers[i];
                    }
                    tempUserNumbers[tempUserNumbers.Length - 1] = int.Parse(userInput);
                    userNumbers = tempUserNumbers;
                }
            }
        }
    }
}
